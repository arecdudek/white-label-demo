{% block head %}
    {{ parent() }}

    <link rel="canonical" href="{{ app.request.host }}" />
{% endblock %}


{% block topContent %}
    <div class="row">
        <div class="col-xs-12 text-right">
            <a id="categories-groups-prev" class="btn btn-sm btn-primary btn-primary-outlined"><i class="fa fa-angle-left"></i></a>
            <a id="categories-groups-next" class="btn btn-sm btn-primary btn-primary-outlined"><i class="fa fa-angle-right"></i></a>
        </div>
    </div>
{% endblock %}

{% macro productGridView(product) %}
    {% if product.offerCount == 1 %}
        {% set productUrl = product|click %}
    {% else %}
        {% set productUrl = path('product', {'productUrl': product.url|trim('/')}) %}
    {% endif %}
    <div class="image">
        <a href="{{ productUrl }}"><img class="img-responsive" src="{{ nokaut_img_domain ~ nokaut_photo_url.prepare(product.photoId, '500x500', product.title) }}"/></a>
        <a href="{{ productUrl }}">
            <span class="content">
                <h5>{{ product.title|raw }}</h5>
                <span class="price">{{ product.prices.min|number_format(2,',',' ') }} PLN</span>
                <button class="btn btn-success btn-success-outlined btn-icon-right">Zobacz <i class="fa fa-angle-right"></i></button>
            </span>
        </a>
    </div>
{% endmacro %}

