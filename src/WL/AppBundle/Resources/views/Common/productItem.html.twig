{% set url = url('product', {'productUrl': product.url|trim('/') }) %}

<div class="col-sm-4 col-md-3">
    <div class="thumbnail" style="height: 285px;">
        <img src="{{ nokaut_img_domain ~ nokaut_photo_url.prepare(product.photoId, '130x130', product.title) }}" alt="{{ product.title }}">
        <div class="caption">
            <h3 class="small">{{ product.title|raw|truncate(40) }}</h3>
            <strong>od {{ product.prices.min|number_format(2, ',', '') }} z≈Ç</strong>
            <br>
            <br>
            <div class="btn-group">
                <a href="{{ url }}" class="btn btn-xs btn-default" role="button">Zobacz</a>
                {% if product.clickUrl %}
                    <a target="_blank" href="{{ product|click }}" class="btn btn-xs btn-primary" role="button">Zobacz w sklepie</a>
                {% endif %}
            </div>
        </div>
    </div>
</div>
