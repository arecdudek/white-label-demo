{% if productsTop10 is defined %}
<h2>Top 10</h2>
<ul class="media-list">
    {% for product in productsTop10 %}
    <li class="media">
        <a href="{{ url('product', {'productUrl': product.url|trim('/') }) }}" title="{{ product.title|raw }}">
            <img width="64" height="64" src="{{ nokaut_img_domain ~ nokaut_photo_url.prepare(product.photoId, '90x90', product.title) }}" alt="{{ product.title }}" class="pull-left">
            <div class="media-body">
                <strong class="media-heading">{{ product.title|raw|truncate(40) }}</strong>
                <br>
                <span>od {{ product.prices.min|number_format(2, ',', '') }} z≈Ç</span>
            </div>
        </a>
    </li>
    {% endfor %}
</ul>
{% endif %}