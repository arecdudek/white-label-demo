{% extends "WLAppBundle::layout.html.twig" %}

{% block title %}
    Mapa kategorii - {{ parent() }}
{% endblock %}


{% block head %}
    {{ parent() }}

    <link rel="canonical" href="{{ url('map_categories') }}"/>
{% endblock %}


{% block content %}
    <div class="row category">
        <div class="col l12 m12 s12">

            <div class="row category-details">
                <div class="col s11">
                    <h1>Mapa kategorii</h1>
                </div>
                <div class="col s1 right-align"></div>
            </div>

            <div class="row category-products">
                <div class="col s12">

                    {% for menuLink in menu_main.menuLinks %}
                        <div>
                            {% if menuLink.subLinks is defined %}
                                <ul class="collection with-header">
                                    <li class="collection-header"><h3>{{ menuLink.name }}</h3></li>
                                    {% for subLink in menuLink.subLinks %}
                                        <li class="collection-item"><a href="{{ url('category', {'categoryUrlWithFilters': subLink.url}) }}"
                                               title="{{ subLink.name }}">{{ subLink.name }}</a></li>
                                    {% endfor %}
                                </ul>
                            {% else %}
                                <li><a href="{{  url('category', { 'categoryUrlWithFilters': menuLink.url}) }}">{{ menuLink.name }}</a></li>
                            {% endif %}
                        </div>
                    {% endfor %}

                </div>

            </div>

        </div>
    </div>
{% endblock %}
