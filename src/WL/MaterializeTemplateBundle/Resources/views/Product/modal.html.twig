<!-- Modal Structure -->
<div id="productModal" class="modal">
    <div class="modal-content product-details">

        <div class="tab-container">
            <div class="top-tabs">
                <ul id="tabs-swipe-demo" class="tabs">
                    <li class="tab col s3"><a href="#modal-products-offers">Oferty</a></li>
                    <li class="tab col s3"><a href="#modal-product-information">Karta produktu</a></li>
                    <li class="tab col s3"><a href="#modal-product-similar">Produkty podobne</a></li>
                </ul>
            </div>
            <div id="modal-products-offers" class="col s12">
                <section>
                    <div class="row top-details">
                        <div class="col l8 m8 s12">
                            <h1 class="title-page">{{ product.title|raw }}
                                <small class="stars">Ocena produktu:
                                    {% for i in 1..5 %}
                                        {% if product.rating and product.rating.rating >= i %}
                                            <i class="product-star fa fa-star" data-star-current="{{ product.rating ? product.rating.rating|round : 0 }}" data-star-nr="{{ i }}"></i>
                                        {% elseif product.rating and product.rating.rating|round >= i %}
                                            <i class="product-star fa fa-star-half-o" data-star-current="{{ product.rating ? product.rating.rating|round : 0 }}" data-star-nr="{{ i }}"></i>
                                        {% else %}
                                            <i class="product-star fa fa-star-o" data-star-current="{{ product.rating ? product.rating.rating|round : 0 }}" data-star-nr="{{ i }}"></i>
                                        {% endif %}
                                    {% endfor %}
                                </small>
                            </h1>
                        </div>
                        <div class="col m4 s12 right-align prices">
                            <p class="main-price"><small class="mainTextColor">od </small>{{ offers.metadata.priceMin|number_format(2, ',', '') }} PLN</p>
                            {% set savePercent = helper_price.getSavePercent(product.prices) %}
                            {% if savePercent > 0 %}
                                <p><small>oszczędzasz do</small> {{ savePercent }}%</p>
                            {% endif %}
                        </div>
                    </div>


                    <div class="options">
                        <a href="#!" class="dropdown-button waves-effect waves-circle  btn-floating secondary-content" data-activates='dropdown-options-modal'>
                            <i class="material-icons">menu</i>
                        </a>

                        <div id="dropdown-options-modal" class="dropdown-content" data-constrainwidth="false">
                            <ul id="sortOffersSelect" class="dropdown-menu dropdown-menu-right">
                                <li class="dropdown-header">Sortowanie</li>
                                <li class="active"><a href="#domyslne"><i class="fa fa-long-arrow-down"></i> domyślne</a></li>
                                <li><a href="#najtansze"><i class="fa fa-sort-numeric-asc"></i> od najtańszych</a></li>
                                <li><a href="#najdrozsze"><i class="fa fa-sort-numeric-desc"></i> od najdroższych</a></li>
                            </ul>
                        </div>
                    </div>




                    <div id="offersContainer" class="row offers">
                        {% for offer in offers %}
                            <!-- offer starts here -->
                            <div class="col s12 offer" data-lp="{{ loop.index }}" data-price="{{ offer.price|number_format(2, '.', '') }}">
                                <a rel="nofollow" target="_blank" href="{{ offer|click }}">
                                    <div class="row">
                                        <div class="col m2 s4">
                                            <div class="image">
                                                <img src="{{ nokaut_img_domain ~ nokaut_photo_url.prepare(offer.photoId, '90x90', offer.title) }}" width="90" height="90" />
                                            </div>
                                        </div>
                                        <div class="col m6 s8">
                                            <h5>{{ offer.title|raw }}</h5>
                                            <div class="pull-right shop">
                                                {% if offer.shop.opineoRating and offer.shop.opineoRating.ratingCount > 0 %}
                                                    <small class="stars">
                                                        Ocena sklepu:
                                                        {% for i in 1..5 %}
                                                            {% if offer.shop.opineoRating and (offer.shop.opineoRating.rating/2) >= i %}
                                                                <i class="fa fa-star"></i>
                                                            {% elseif offer.shop.opineoRating and (offer.shop.opineoRating.rating/2)|round >= i %}
                                                                <i class="fa fa-star-half-o"></i>
                                                            {% else %}
                                                                <i class="fa fa-star-o"></i>
                                                            {% endif %}
                                                        {% endfor %}
                                                    </small>
                                                {% endif %}
                                                <img src="{{ nokaut_img_domain ~ offer.shop.urlLogo }}" style="max-width: 88px; max-height: 40px;" />
                                            </div>
                                        </div>
                                        <div class="col m4 s12 right-align">
                                            <p class="lead price">{{ offer.price|number_format(2, ',', '') }} PLN</p>
                                            <span class="btn waves-effect btn-small">Zobacz w sklepie <i class="fa fa-angle-right"></i></span>
                                        </div>
                                    </div>
                                </a>
                            </div>
                            <!-- offer ends here -->
                        {% endfor %}
                    </div>
                </section>
            </div>
            <div id="modal-product-information" class="col s12">
                <section>
                    <h1 class="title-page">{{ product.title|raw }}</h1>
                    <div class="row">
                        <div class="col m5 s12 gallery">
                            <ul class="bxslider gallery-view">
                                {% for photoId in product.photoIds if photoId %}
                                    {% if loop.index < 5 %}
                                        <li><img class="img-responsive" src="{{ nokaut_img_domain ~ nokaut_photo_url.prepare(photoId, '500x500', product.title) }}" alt="{{ product.title }}"></li>
                                    {% endif %}
                                {% endfor %}
                            </ul>

                            <div id="gallery-items" class="row gallery-items">
                                {% for photoId in product.photoIds if photoId %}
                                    {% if loop.index < 5 %}
                                        <div class="col l3 m4 s3 gallery-item"><a data-slide-index="{{ loop.index0 }}" href=""><img class="img-responsive" src="{{ nokaut_img_domain ~ nokaut_photo_url.prepare(photoId, '90x90', product.title) }}" /></a></div>
                                    {% endif %}
                                {% endfor %}
                            </div>
                        </div>
                        <div class="col m7 s12">
                            {% include '@WLMaterializeTemplate/Product/properties.html.twig' %}
                        </div>
                    </div>
                    {{ product.descriptionHtml|raw }}
                </section>
            </div>
            <div id="modal-product-similar" class="col s12">
                <section>
                    {% if productsSimilar|length > 0 %}
                        <div class="row lower-double products">
                            <div class="col l10 m10 s7">
                                <h4>Produkty podobne</h4>
                            </div>
                            <div class="col l2 m2 s5 right-align">
                                <a id="products-similar-prev" class="btn waves-effect btn-small"><i class="fa fa-angle-left"></i></a>
                                <a id="products-similar-next" class="btn waves-effect btn-small"><i class="fa fa-angle-right"></i></a>
                            </div>
                        </div>
                        <div class="row">
                            <div id="products-similar" class=" owl-carousel">
                                {% for product in productsSimilar %}
                                    {% include '@WLMaterializeTemplate/Product/productBox.html.twig' with {'product': product} %}
                                {% endfor %}
                            </div>
                        </div>
                    {% endif %}





                    <div class="row lower-double products">
                        <div class="col l10 m10 s7">
                            <h4>Produkty najpopularniejsze w kategorii <a href="{{ url('category', {'categoryUrlWithFilters': category.url}) }}">{{ category.title|raw }}</a></h4>
                        </div>
                        <div class="col l2 m2 s5 right-align">
                            <a id="products-top-prev" class="btn btn-sm btn-primary btn-primary-outlined"><i class="fa fa-angle-left"></i></a>
                            <a id="products-top-next" class="btn btn-sm btn-primary btn-primary-outlined"><i class="fa fa-angle-right"></i></a>
                        </div>
                    </div>
                    <div class="row">
                        <div id="products-top" class=" owl-carousel">
                            {% for product in productsTop10 %}
                                {% include '@WLMaterializeTemplate/Product/productBox.html.twig' with {'product': product} %}
                            {% endfor %}
                        </div>
                    </div>
                </section>
            </div>
        </div>



    </div><!-- /.modal-content -->
</div>

    <script type="text/javascript">

        $(document).ready(function(){
            $('.tab-container ul.tabs').tabs();
        });

        $('#productModal').on('shown.bs.dropdown', function () {
            $('#offersContainer').isotope({
                itemSelector : '.offer',
                layoutMode : 'vertical',
                getSortData : {
                    price : function ( $elem ) {
                        return parseFloat($($elem).attr('data-price'));
                    }
                }
            });

        });

        var eventsProductInformationInitialized = false;
        $('#productModal ul.tabs').on('click', 'a[href="#modal-product-information"]', function () {
            if (!eventsProductInformationInitialized) {
                $('.gallery-view').bxSlider({
                    pagerCustom: '#gallery-items',
                    controls: false
                });
                eventsProductInformationInitialized = true;
            }
        });

        var eventsProductSimilarInitialized = false;
        $('#productModal ul.tabs').on('click', 'a[href="#modal-product-similar"]', function () {
            if (!eventsProductSimilarInitialized) {
                var similar = $("#products-similar");
                similar.owlCarousel({
                    items: 3,
                    itemsDesktop: [1000, 3],
                    itemsDesktopSmall: [900, 3],
                    itemsTablet: [600, 1],
                    itemsMobile: false,
                    pagination: false
                });
                $("#products-similar-next").click(function () {
                    similar.trigger('owl.next');
                });
                $("#products-similar-prev").click(function () {
                    similar.trigger('owl.prev');
                });

                var top = $("#products-top");
                top.owlCarousel({
                    items: 3,
                    itemsDesktop: [1000, 3],
                    itemsDesktopSmall: [900, 3],
                    itemsTablet: [600, 1],
                    itemsMobile: false,
                    pagination: false
                });
                $("#products-top-next").click(function () {
                    top.trigger('owl.next');
                });
                $("#products-top-prev").click(function () {
                    top.trigger('owl.prev');
                });

                productModalEvent('#productModal');

                eventsProductSimilarInitialized = true;
            }
        });




        $( document ).ready(function() {
            $('#productModal a.dropdown-button').dropdown();
        });

        $('#productModal').on('click','a.dropdown-button',function(){
            $(this).dropdown();
        });

        $('#sortOffersSelect a').click(function(){
            var sortName = $(this).attr('href').slice(1);
            switch (sortName) {
                case 'domyslne':
                    $('#offersContainer').isotope({ sortBy : 'original-order' });
                    break;
                case 'najtansze':
                    $('#offersContainer').isotope({
                        sortBy : 'price',
                        sortAscending : true
                    });
                    break;
                case 'najdrozsze':
                    $('#offersContainer').isotope({
                        sortBy : 'price',
                        sortAscending : false
                    });
                    break;
            }
            $('#sortOffersSelect li').removeClass('active');
            $(this).parent().addClass('active');
            $('#productModal a.dropdown-button').dropdown('close');
            return false;
        });


    </script>
</div><!-- /.modal -->

