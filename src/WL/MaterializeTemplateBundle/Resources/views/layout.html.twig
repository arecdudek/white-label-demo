{% extends "::base.html.twig" %}

{% set route = app.request.get('_route') %}
{% set routeArgument = route == 'search' ? 'phrase' : 'categoryUrlWithFilters' %}


{% block head %}
    <meta name="viewport" content="width=device-width, initial-scale=1">
{% endblock %}

{% block stylesheets %}
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="{{ asset('bundles/wlapp/css/owl.carousel.css') }}">
    <link rel="stylesheet" href="{{ asset('bundles/wlapp/css/jquery.bxslider.css') }}">
    <link rel="stylesheet" href="{{ asset('bundles/wlmaterializetemplate/css/materialize.css') }}">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

    <link href="{{ asset('bundles/wlapp/css/jquery.growl.css') }}" rel="stylesheet" type="text/css" />
    <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">
{% endblock %}

{% block javascriptsTop %}
    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>

    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->

    <script type="text/javascript">
        function search() {
            var url = '{{ url('search', {'phrase': 'produkt:_PHRASE_VALUE_.html'}) }}';
            var phrase = $('#phraseInput').val().trim().toLowerCase();
            if(!phrase) {
                alert('Pole do wyszukiwania nie może być puste');
                return false;
            }
            phrase = phrase.replace(/\s+/g,  '-');
            location.href = url.replace('_PHRASE_VALUE_',  encodeURIComponent(phrase));
            return false;
        }
        $(function(){
            $('#searchFromCon').on('submit', function () {
                return search()
            });
            $('#buttonSearch').on('click', function () {
                return search()
            });
        });
    </script>

    {% if google_analytics_id %}
        <script>
            (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
                    (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
                m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
            })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

            ga('create', '{{ google_analytics_id }}', 'auto');
            ga('send', 'pageview');
        </script>
    {% endif %}

{% endblock %}

{% block body %}

    <header>
        <nav class="nav-extended">
            <div class="nav-wrapper">
                <div class="container">
                    <a href="/" class="brand-logo">{{ site_name }}</a>
                    <a href="#" data-activates="mobile-menu" class="button-collapse"><i class="material-icons">menu</i></a>
                    {% include menu_main.template %}
                </div>
            </div>
        </nav>
    </header>

    <div class="searchBox">
        <div class="search-btn">
            <button class="waves-effect waves-circle  btn-floating btn-large" href="#" data-activates='test'>
                <i class="material-icons">search</i>
            </button>
        </div>

        <div class="search-con">
            <nav>
                <div class="nav-wrapper">
                    <form id="searchFromCon" >
                        <div class="input-field">
                            <input id="phraseInput" type="search" required>
                            <label class="label-icon" for="search"><i class="material-icons">search</i></label>
                            <i class="material-icons close">close</i>
                        </div>
                    </form>
                </div>
            </nav>
        </div>
    </div>

    {% block topContent %}
        {% if breadcrumbs is defined %}
            <nav id="breadcrumbs">
                <div class="nav-wrapper">
                    <div class="container">
                        <div class="row">
                            <div class="col l12">
                                <a href="/"  class="breadcrumb">{{ site_name }}</a>
                                {% for crumb in breadcrumbs %}
                                    {% if loop.last or crumb.url is null %}
                                        <a class="breadcrumb" href="#">{{ crumb.title|raw }}</a>
                                    {% else %}
                                        <a class="breadcrumb" href="{{ crumb.url }}">{{ crumb.title|raw }}</a>
                                    {% endif %}
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                </div>
            </nav>
        {% endif %}
    {% endblock %}

    <div class="container container-fluid page">
        {% block content %}
        {% endblock %}
    </div>

    <footer class="page-footer">
        <div class="container">
            <div class="row">
                <div class="col l5 s12">
                    <h5>O nas</h5>
                    <p>{{ site_name }} to serwis pozwalający na porównanie cen w najlepszych sklepach internetowych w Polsce. Został stworzony, by ułatwić użytkownikom Internetu znalezienie najniższych cen i wygodne e-zakupy. Porównaj oferty kilku tysięcy sklepów internetowych.</p>
                </div>
                <div class="col l7 s12">
                    <h5>Dla sklepów</h5>
                    <p>Chcesz, aby znalazła się tutaj również oferta Twojego sklepu? Operatorem danych dla serwisu {{ site_name }} jest Nokaut.pl, porównywarka cen i sieć reklamowa odwiedzana przez kilka milionów użytkowników każdego miesiąca. Skontaktuj się skorzystaj z kontakt@nokaut.pl.</p>
                </div>
            </div>
        </div>
        <div class="footer-copyright">
            <div class="container">
                Copyright © {{ "now"|date('Y') }}. Wszystkie prawa zastrzeżone.
                <a class="right" href="{{ url('map_categories') }}">Mapa kategorii</a>
            </div>
        </div>
    </footer>

    <div id="modal-preloader"><img src="{{ asset('/bundles/wlapp/images/progress-circle-info.svg') }}"></div>
{% endblock %}


{% block javascripts %}
    <script src="{{ asset('bundles/wlapp/js/bootstrap.min.js') }}"></script>
    <script src="{{ asset('bundles/wlapp/js/owl.carousel.min.js') }}"></script>
    <script src="{{ asset('bundles/wlapp/js/jquery.bxslider.min.js') }}"></script>
    <script src="{{ asset('bundles/wlapp/js/jquery.growl.js') }}" type="text/javascript"></script>
    <script src="{{ asset('bundles/wlmaterializetemplate/js/common.js') }}"></script>


    <script src="{{ asset('bundles/wlmaterializetemplate/js/materialize.js') }}"></script>

    <script>
        $('.search-btn, #searchFromCon .close').click(function(){
            var widthBox = $('.search-con').width();
            if(widthBox == 0) {
                $('.search-con').animate({width: 300 + 'px'},300);
                $('#phraseInput').focus();
            }else{
                $('.search-con').animate({width: 0},300);
            }
        });

        $('#phraseInput').focusout(function() {
                $('.search-con').animate({width: 0},250);
            });

        $(".button-collapse").sideNav();
    </script>

{% endblock %}